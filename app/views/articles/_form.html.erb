<!-- Används för återanvändning (partials) i create och edit av en artikel -->

<!-- Visar felmeddelande -->
<%= render 'shared/errors', obj: @article %>

<!-- Formulär -->
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <!-- Title -->
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :title %>
                </div>
                <div class="col-sm-8">
                <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
                </div>
            </div><!-- /.form-group -->

            <!-- Description -->
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :description %>
                </div>
                <div class="col-sm-8">
                <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Body of article" %>
                </div>
            </div><!-- /.form-group -->

            <!-- Categories -->
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :Category %>
                </div>
                <div class="col-sm-8">
                    <!-- Visar alla tillgängliga kategorier som checkboxar -->
                    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox-inline") + cb.text} %>
                    <% end %>
                </div>
            </div><!-- /.form-group -->

            <!-- Button -->
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <%= f.submit class: "btn btn-primary btn-lg" %>
                </div>
            </div><!-- /.form-group -->
        <% end %>

        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
        </div>
    </div>
</div>