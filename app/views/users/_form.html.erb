<!-- Visar felmeddelande -->
<%= render 'shared/errors', obj: @user %>

<!-- Formulär -->
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <!-- Username -->
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :username %>
                </div>
                <div class="col-sm-8">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
                </div>
            </div><!-- /.form-group -->

            <!-- Email -->
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :email %>
                </div>
                <div class="col-sm-8">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
                </div>
            </div><!-- /.form-group -->

            <!-- Password -->
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :password %>
                </div>
                <div class="col-sm-8">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                </div>
            </div><!-- /.form-group -->

            <!-- Button -->
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <!-- Kollar om den körs create (om user är en ny db-rad) eller edit och ändrar knapptexten därefter -->
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
                </div>
            </div><!-- /.form-group -->
        <% end %>

        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
        </div>
    </div>
</div>